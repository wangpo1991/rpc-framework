<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
						http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- 注册中心配置 -->
	<bean id="registry" class="com.light.rpc.registry.RegistryService">
		<property name="zookeeper">
			<bean id="zookeeper" class="com.light.rpc.registry.ZookeeperClient">
				<constructor-arg name="address" value="192.168.155.108:2181" />
				<constructor-arg name="timeout" value="2000" />
			</bean>
		</property>
	</bean>

	<bean id="config" class="com.light.rpc.consumer.ConsumerConfig">
		<property name="group" value="beijing" />
	</bean>

	<!-- 拉取服务配置 -->
	<bean id="subscript" class="com.light.rpc.consumer.ConsumerTransport">
		<property name="registry" ref="registry" />
		<property name="consumerConfig" ref="config"></property>
	</bean>
	
	<!-- 订阅服务 -->
	<bean id="helloServiceRpc" class="com.light.rpc.consumer.RpcProxyFactoy" factory-method="getRpcServerProxy">
		<constructor-arg index="0" ref="config" />
		<constructor-arg index="1" value="com.light.rpc.export.HelloService" />
	</bean>
	
	<!-- 订阅服务 -->
	<bean id="hiServiceRpc" class="com.light.rpc.consumer.RpcProxyFactoy" factory-method="getRpcServerProxy">
		<constructor-arg index="0" ref="config" />
		<constructor-arg index="1" value="com.light.rpc.export.HiService" />
	</bean>
	
</beans>
